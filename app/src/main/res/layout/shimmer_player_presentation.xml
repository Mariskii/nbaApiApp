<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/presentation_player_shimer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/nbaBlue">

        <View
            android:id="@+id/imagePlayerShimmer"
            android:layout_width="120dp"
            android:layout_height="140dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#555555"/>

        <FrameLayout
            android:id="@+id/namePlayerShimmer"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            android:background="#555555"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toEndOf="@id/imagePlayerShimmer"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imagePlayerShimmer"
            app:layout_constraintTop_toBottomOf="@id/namePlayerShimmer">

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#555555"
                android:layout_margin="10dp"/>

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="#555555"
                android:layout_margin="10dp"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/secondPlayerPresentationShimmer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/imagePlayerShimmer"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/nbaBlue"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/textPlayerHeigthShimmer"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:background="#555555"
                android:layout_margin="10dp" />

            <FrameLayout
                android:id="@+id/textPlayerPoundsShimmer"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:background="#555555"
                android:layout_margin="10dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>