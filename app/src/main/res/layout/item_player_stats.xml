<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/statsSeason"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="2018"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:textStyle="bold"
        android:background="@color/statBackGround"/>

    <TextView
        android:id="@+id/pointsPerGame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="33.1"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/foulsPerGame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="20"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"
        android:background="@color/statBackGround"/>

    <TextView
        android:id="@+id/assistsPerGame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="2.4"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/reboundsPerGame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="12.4"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"
        android:background="@color/statBackGround"/>

    <TextView
        android:id="@+id/stealsPerGame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="5.7"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:textStyle="bold" />
</LinearLayout>